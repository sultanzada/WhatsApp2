<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_profile_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/profile_image" />

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/receiver_profile_image"
        android:background="@drawable/receiver_messages"
        android:gravity="center_vertical|start"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="75dp"
        android:paddingBottom="8dp"
        android:text="receiver"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/receiver_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/receiver_message_text"
        android:layout_marginTop="16dp"
        android:layout_marginStart="-68dp"
        android:padding="5dp"
        android:text="date"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/receiver_picture_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_receiver_image_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:padding="5dp"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/sender_picture_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_sender_image_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:padding="5dp"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/sender_messages"
        android:gravity="center_vertical|start"
        android:paddingEnd="75dp"
        android:paddingTop="8dp"
        android:paddingStart="15dp"
        android:paddingBottom="8dp"
        android:text="sender "
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sender_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/sender_message_text"
        android:layout_marginTop="16dp"
        android:layout_marginStart="-72dp"
        android:padding="5dp"
        android:text="date"
        android:textSize="11sp" />




</RelativeLayout>